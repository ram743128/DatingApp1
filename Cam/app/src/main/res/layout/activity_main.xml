<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.intentdemo.MainActivity">

    <Button
        android:id="@+id/capture_button"
        android:layout_width="192dp"
        android:layout_height="46dp"
        android:text="Capture"
        android:onClick="capture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.277"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/custom_imageview"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/custom_imageview"
        android:layout_width="0dp"
        android:layout_height="202dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitStart"
        android:src="@drawable/singapore"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gallery_button"
        android:layout_width="190dp"
        android:layout_height="47dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:onClick="pickGalleryImage"
        android:text="Gallery"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/capture_button"
        app:layout_constraintRight_toRightOf="@+id/capture_button"
        app:layout_constraintTop_toBottomOf="@+id/capture_button" />
</android.support.constraint.ConstraintLayout>